@{
    ViewBag.Title = "登陆";
    Layout = "~/Views/Layouts/Form.cshtml";
}

@section head
{
    <style type="text/css">
        #Logindiv {
            position: absolute;
            top: 50%;
            left: 50%;
            margin: -100px 0 0 -200px;
            font-size: 16px;
            text-align: center;
            z-index: 99;
        }
    </style>
}
<div id="Logindiv">
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">账号</label>
        <div class="col-sm-10">
            @Html.TextBox("Email", "", new { @class = "form-control", placeholder = "Email", style = "width: 300px;", validate = "{required:true}", title = "请输入用户名" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">密码</label>
        <div class="col-sm-10">
            @Html.Password("pwd", "", new { @class = "form-control", placeholder = "Password", style = "width: 300px;", validate = "{required:true}", title = "请输入密码" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label style="float:left;">
                    <input type="checkbox">记住账号
                </label>
                <label style="float:right;">
                    @Html.ActionLink("注册", "Register")
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary btn-lg btn-block">登陆</button>
        </div>
    </div>
</div>

