
@model LiMengLing1995.Model.MengLingUser
@using LiMengLing1995.Controls;
@{
    ViewBag.Title = "注册";
    Layout = "~/Views/Layouts/Form.cshtml";
    var sex = ViewData["Sex"] as IEnumerable<SelectListItem>;
}

@section head
{
    <style type="text/css">
        #Logindiv {
            position: absolute;
            top: 50%;
            left: 50%;
            margin: -100px 0 0 -200px;
            font-size: 16px;
            text-align: center;
            z-index: 99;
        }


        .error {
            top: 0;
            right: 0;
            color: red;
            float: left;
        }
    </style>
}

<div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-1 control-label">账号</label>
        <div class="col-sm-10 ">
            @Html.TextBoxFor(e => e.Account, new { @class = "form-control", placeholder = "Account", style = "width: 300px;position: relative;", validate = "{required:true}" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-1 control-label">密码</label>
        <div class="col-sm-10">
            @Html.PasswordFor(e => e.Pwd, new { @class = "form-control", placeholder = "Password", style = "width: 300px;position: relative;", validate = "{required:true,rangelength:[6,12]}" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-1 control-label">确认密码</label>
        <div class="col-sm-10">
            @Html.Password("Password", "", new { @class = "form-control", placeholder = "Password", style = "width: 300px;position: relative;", validate = "{required:true,rangelength:[6,12],equalTo:'#Pwd'}" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-1 control-label">手机</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(e => e.Mobile, new { @class = "form-control", placeholder = "Mobile", style = "width: 300px;position: relative;", validate = "{required:true}", title = "请输入手机" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-1 control-label">姓名</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(e => e.Name, new { @class = "form-control", placeholder = "Name", style = "width: 300px;" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-1 control-label">性别</label>
        <div class="col-sm-10">
            @Html.RadioButtonFor(e => e.Sex, sex, LiMengLing1995.Model.enumState.userSex.Male.GetHashCode().ToString())
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-1 control-label">邮箱</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(e => e.Email, new { @class = "form-control", placeholder = "Email", style = "width: 300px;position: relative;", validate = "{email:true}", title = "请输入正确的邮箱" })
        </div>
    </div>
    <div class="form-group">
        <div class="co-sm-offset-1 colsm-10">
            <button type="submit" class="btn btn-primary">注册</button>
        </div>
    </div>
</div>
